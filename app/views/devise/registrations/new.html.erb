<body class="min-h-screen bg-indigo-50 flex items-start justify-center pt-10 sm:pt-16" style="padding-top: env(safe-area-inset-top);">
  <div class="flex items-center justify-center min-h-screen bg-indigo-50 pt-10 sm:pt-16" style="padding-top: env(safe-area-inset-top);">
    <div class="bg-white shadow-xl rounded-3xl max-w-lg w-full overflow-hidden mt-10 sm:mt-16 p-8 sm:p-10 flex flex-col justify-center w-full">
      <h2 class="text-4xl font-bold text-indigo-900 text-center mb-6">Create Account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <% if resource.errors.any? %>
    <div class="mb-4 bg-red-100 text-red-700 p-3 rounded-lg w-full max-w-md mx-auto shadow-lg">
      <ul class="list-disc pl-5">
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

    <div class="md:col-span-2">
      <%= f.label :email, class: "block text-indigo-800 font-medium mb-1" %>
      <%= f.email_field :email, autofocus: true, required: true,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400" %>
    </div>

    <div>
      <%= f.label :username, class: "block text-indigo-800 font-medium mb-1" %>
      <%= f.text_field :username, required: true,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400" %>
    </div>

    <div>
      <%= f.label :date_of_birth, "Date of Birth", class: "block text-indigo-800 font-medium mb-1" %>
      <%= f.date_field :date_of_birth, required: true,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400" %>
    </div>

    <div class="relative">
      <%= f.label :password, class: "block text-indigo-800 font-medium mb-1" %>
      <%= f.password_field :password, autocomplete: "new-password", required: true,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400" %>
      <% if @minimum_password_length %>
        <span class="absolute right-2 top-1 text-gray-500 text-xs">(min <%= @minimum_password_length %> chars)</span>
      <% end %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-indigo-800 font-medium mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400" %>
    </div>

  </div>

  <div class="mt-6">
    <%= f.submit "Create Account", class: "w-full bg-indigo-500 text-white font-semibold py-3 rounded-lg hover:bg-indigo-600 transition-colors shadow-sm" %>
  </div>

<% end %>


      <p class="mt-6 text-center text-indigo-700">
        Already have an account? 
        <%= link_to "Log in", new_session_path(resource_name), class: "font-medium underline hover:text-indigo-900" %>
      </p>

    </div>

  </div>
</body>
