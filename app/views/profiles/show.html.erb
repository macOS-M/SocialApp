<% content_for :nav_offset, true %>
<div class="min-h-screen bg-indigo-50">
  <div class="relative h-64 bg-gradient-to-r from-indigo-500 to-purple-600">
    <% if @user.respond_to?(:cover_image) && @user.cover_image.respond_to?(:attached?) && @user.cover_image.attached? %>
      <%= image_tag url_for(@user.cover_image), class: "w-full h-full object-cover" %>
    <% elsif @user[:cover_photo].present? %>
      <%= image_tag @user[:cover_photo], class: "w-full h-full object-cover" %>
    <% end %>
  </div>

  <div class="max-w-5xl mx-auto px-6 -mt-20 relative z-10">
    <div class="bg-white rounded-2xl shadow-lg p-6">
      <div class="flex flex-col md:flex-row items-center md:items-end space-y-4 md:space-y-0 md:space-x-6">
        

        <div class="relative">
          <div class="w-32 h-32 rounded-full border-4 border-white shadow-lg bg-gradient-to-br from-indigo-400 to-purple-500 flex items-center justify-center overflow-hidden">
            <% if @user.respond_to?(:profile_image) && @user.profile_image.respond_to?(:attached?) && @user.profile_image.attached? %>
              <%= image_tag url_for(@user.profile_image), class: "w-full h-full object-cover" %>
            <% elsif @user[:profile_picture].present? %>
              <%= image_tag @user[:profile_picture], class: "w-full h-full object-cover" %>
            <% else %>
              <span class="text-white text-4xl font-bold"><%= @user.username[0].upcase %></span>
            <% end %>
          </div>
        </div>

        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl font-bold text-gray-900"><%= @user.username %></h1>
          
          <div class="mt-2 flex flex-wrap justify-center md:justify-start gap-4 text-sm text-gray-600">
            <% if @user.location.present? %>
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <%= @user.location %>
              </span>
            <% end %>
            
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              Joined <%= @user.created_at.strftime("%B %Y") %>
            </span>
          </div>

          <% if @user.bio.present? %>
            <p class="mt-3 text-gray-700"><%= @user.bio %></p>
          <% end %>
        </div>

        <div class="flex space-x-2">
          <% if @is_own_profile %>
            <%= link_to edit_user_registration_path, class: "px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition" do %>
              <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Edit Profile
            <% end %>
          <% else %>
            <% case @friendship_status %>
            <% when :friends %>
              <%= link_to friendship_path(@user), data: { turbo_method: :delete, turbo_confirm: "Remove #{@user.username} as a friend?" }, class: "px-6 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition" do %>
                <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                </svg>
                Unfriend
              <% end %>
            <% when :pending_sent %>
              <button disabled class="px-6 py-2 bg-gray-400 text-white rounded-lg cursor-not-allowed">
                <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Request Pending
              </button>
            <% when :pending_received %>
              <div class="flex space-x-2">
                <%= link_to accept_friendship_path(@friendship_request), data: { turbo_method: :patch }, class: "px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition" do %>
                  <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Accept
                <% end %>
                <%= link_to reject_friendship_path(@friendship_request), data: { turbo_method: :patch }, class: "px-6 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition" do %>
                  <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Decline
                <% end %>
              </div>
            <% when :none %>
              <%= link_to friendships_path(friend_id: @user.id), data: { turbo_method: :post }, class: "px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition" do %>
                <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                </svg>
                Add Friend
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Profile Content -->
  <div class="max-w-5xl mx-auto px-6 py-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      
      <div class="md:col-span-1">
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold mb-4 text-gray-900">About</h2>
          
          <div class="space-y-3">
            <div class="flex items-start">
              <svg class="w-5 h-5 text-gray-500 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <div>
                <p class="text-sm text-gray-500">Username</p>
                <p class="text-gray-900 font-medium"><%= @user.username %></p>
              </div>
            </div>

            <div class="flex items-start">
              <svg class="w-5 h-5 text-gray-500 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <div>
                <p class="text-sm text-gray-500">Email</p>
                <p class="text-gray-900 font-medium"><%= @is_own_profile ? @user.email : "[hidden]" %></p>
              </div>
            </div>

            <div class="flex items-start">
              <svg class="w-5 h-5 text-gray-500 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <div>
                <p class="text-sm text-gray-500">Birthday</p>
                <p class="text-gray-900 font-medium"><%= @user.date_of_birth.strftime("%B %d, %Y") %></p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg p-6 mt-6">
          <h2 class="text-xl font-bold mb-4 text-gray-900">Stats</h2>
          <div class="space-y-2">
            <div class="flex justify-between">
              <span class="text-gray-600">Posts</span>
              <span class="font-bold text-indigo-600"><%= @user.posts.count %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Friends</span>
              <span class="font-bold text-indigo-600"><%= @user.friends.count %></span>
            </div>
          </div>
        </div>
      </div>

      <div class="md:col-span-2">
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold mb-4 text-gray-900">
            <%= @is_own_profile ? "Your Posts" : "#{@user.username}'s Posts" %>
          </h2>

          <% if @posts.any? %>
            <div class="space-y-4">
              <% @posts.each do |post| %>
                <div class="bg-gray-50 p-4 rounded-xl hover:shadow-md transition relative">
                  <div class="flex items-center mb-3">
                    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-indigo-400 to-purple-500 flex items-center justify-center overflow-hidden">
                      <% user = post.user %>
                      <% if user.respond_to?(:profile_image) && user.profile_image.attached? %>
                        <%= image_tag url_for(user.profile_image), class: "w-full h-full object-cover" %>
                      <% elsif user[:profile_picture].present? %>
                        <%= image_tag user[:profile_picture], class: "w-full h-full object-cover" %>
                      <% else %>
                        <span class="text-white font-bold"><%= user.username[0].upcase %></span>
                      <% end %>
                    </div>
                    <div class="ml-3">
                      <div class="font-semibold text-gray-900"><%= user.username %></div>
                      <span class="text-gray-500 text-sm"><%= time_ago_in_words(post.created_at) %> ago</span>
                    </div>
                  </div>
                  <p class="text-gray-800 whitespace-pre-wrap"><%= post.content %></p>

                  <% if @is_own_profile %>
                    <div class="absolute top-4 right-4 inline-block text-left" data-controller="dropdown">
                      <button type="button" class="inline-flex justify-center w-8 h-8 rounded-full hover:bg-gray-200" data-action="click->dropdown#toggle">
                        <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M10 6a2 2 0 110-4 2 2 0 010 4zm0 6a2 2 0 110-4 2 2 0 010 4zm0 6a2 2 0 110-4 2 2 0 010 4z" />
                        </svg>
                      </button>

                      <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-32 bg-white border rounded shadow-lg z-50">
                        <%= link_to "Edit", edit_post_path(post), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
                        <%= link_to "Delete", post_path(post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "block px-4 py-2 text-sm text-red-600 hover:bg-gray-100" %>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-12">
              <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              <p class="text-gray-500">
                <%= @is_own_profile ? "You haven't posted anything yet." : "#{@user.username} hasn't posted anything yet." %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
