<% show_submit = local_assigns.fetch(:show_submit, true) %>
<%= form_with(model: @post, authenticity_token: true, data: { turbo: false }, local: true, class: "space-y-4") do |f| %>
  <div>
    <%= f.label :content, @post.persisted? ? "Edit your post" : "What's on your mind?", class: "block text-sm font-medium text-gray-700" %>
  <%= f.text_area :content, rows: 4, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    <% if @post.errors[:content].present? %>
      <p class="text-sm text-red-600 mt-1"><%= @post.errors[:content].first %></p>
    <% end %>
  </div>

  <% if show_submit %>
    <div>
      <%= f.submit @post.persisted? ? "Update Post" : "Post", class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" %>
    </div>
  <% end %>
<% end %>
